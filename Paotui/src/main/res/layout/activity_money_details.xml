<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <include layout="@layout/top_view_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:background="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_20"
        android:paddingTop="@dimen/margin_20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="打款金额"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="20"
            android:textColor="@color/yellow_f4"
            android:textSize="22sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:layout_marginLeft="@dimen/margin_15"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="打款状态"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_staus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="已打款"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="打款方式"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_way"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/margin_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:lines="1"
            android:text="交通银行卡"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="打款账号"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="2312312"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="打款时间"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="2019"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="交易号"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="2312312"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:text="备注"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="3月1"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_15"
            android:gravity="center"
            android:text="如有疑问请联系客服\n400-629-9903"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</LinearLayout>