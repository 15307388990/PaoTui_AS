<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/popup_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:text="请选择设备"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_px"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_whole_device"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height_44"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center_vertical"
            android:text="全部设备（3）"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_16" />

        <ListView
            android:id="@+id/lv_device_list"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_px"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:text="关闭"
            android:textColor="@color/actionbar_title_color"
            android:textSize="@dimen/text_16" />v
    </LinearLayout>
</RelativeLayout>