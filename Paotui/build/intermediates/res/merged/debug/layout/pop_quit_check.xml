<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_15"
            android:text="提示"
            android:textColor="@color/two_gray"
            android:textSize="@dimen/text_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:text="您确定要退出登录吗？"
            android:textColor="@color/two_gray"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_px"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/jiujiujiu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_colse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/point_cash_blue"
                android:textSize="@dimen/text_16" />

            <View
                android:layout_width="@dimen/divider_height_px"
                android:layout_height="match_parent"
                android:background="@color/jiujiujiu" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="退出"
                android:textColor="@color/point_cash_blue"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>