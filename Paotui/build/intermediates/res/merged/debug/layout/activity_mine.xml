<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="#1B99ED">

        <com.fmt.ming.paotui.view.CircleImageView
            android:id="@+id/myicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:src="@drawable/head"
            attrs:border_color="@color/white"
            attrs:border_width="1dp" />


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:layout_toRightOf="@+id/myicon"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="4"
                android:text="罗富贵"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/list_icon_more" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="47dp"
            android:src="@drawable/icon_set" />

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="47dp"
            android:layout_toLeftOf="@+id/iv_set">

            <ImageView
                android:id="@+id/iv_magess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_massge" />

            <ImageView
                android:id="@+id/iv_yuandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/yuandian"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_set"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/myicon"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#06CCF6">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="71dp"
            android:layout_marginTop="21dp"
            android:text="0"
            android:textColor="#FFF600"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_number"
            android:text="单"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number"
            android:layout_marginLeft="62dp"
            android:text="今日完成单"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <View
            android:id="@+id/v_1"
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="#ff78d7fc" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/v_1"
            android:text="0"
            android:textColor="#FFF600"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/tv_price"
            android:text="元"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/v_1"
            android:text="今日预计收入"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sample"
        android:layout_width="80dp"
        android:layout_height="256dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/switch_custom_thumb_off"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/switch_custom_thumb_on"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_jiedan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="接\n单\n中"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_xiuxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:text="休\n息\n中"
            android:textColor="@color/FMT_ECC6B0"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>


</LinearLayout>