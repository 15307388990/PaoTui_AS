<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_f3"
    android:orientation="vertical">

    <include layout="@layout/top_view_white" />

    <ImageView
        android:layout_width="@dimen/margin_75"
        android:layout_height="@dimen/margin_75"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_40"
        android:src="@drawable/user_img_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:text="街边GO"
        android:textColor="@color/two_gray"
        android:textSize="@dimen/text_16" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:text="版本 v1.0.0"
        android:textColor="@color/jiujiujiu"
        android:textSize="@dimen/text_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_quit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_44"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/two_gray"
        android:textSize="@dimen/text_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_px"
        android:background="@color/gray" />

</LinearLayout>  